<section id="blog" class="s-blog target-section">

  <div class="row narrow section-intro has-bottom-sep">
    <div class="col-full">
      <h3>Journal</h3>
      <h1>Latest From The Blog.</h1>
      <p class="lead">My latest musings on technology and development</p>
    </div>
  </div>

  <div class="row blog-content">
    <div class="col-full">

      <div class="blog-list block-1-2 block-tab-full">
      <% latest_articles.each do |article| %>
        <article class="col-block">

          <div class="blog-date">
            <%= link_to article.published_date, article_path(article.slug) %>
          </div>

          <h2 class="h01">
            <%= link_to article.title, article_path(article.slug) %>
          </h2>
          <p><%= article.summary %></p>

          <div class="blog-cat">
            <a href="#">Branding</a><a href="#">Design</a>
          </div>

        </article>

      <% end %>
      </div> <!-- end blog-list -->

    </div> <!-- end col-full -->
  </div> <!-- end blog-content -->

  <div class="row section-intro">
    <%= link_to "See all posts", articles_path, class: "btn btn--primary btn--large" %>
  </div>

</section> <!-- end s-blog -->

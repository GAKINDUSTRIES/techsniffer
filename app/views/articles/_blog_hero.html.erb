<div class="page-header page-header--single page-hero" style="background-image:url('<%= article.hero_image.url %>')">

  <div class="row page-header__content narrow">
    <article class="col-full">
      <div class="page-header__info">
        <div class="page-header__cat">
          <% article.tags.each do |tag| %>
            <%= link_to tag, '' %>
          <% end %>
        </div>
      </div>
      <h1 class="page-header__title">
        <a href="#0" title="">
          <%= article.title %>
        </a>
      </h1>
      <ul class="page-header__meta">
        <li class="date"><%= article.published_date %></li>
        <li class="author">
          By
          <span><%= admin.full_name %></span>
        </li>
      </ul>

    </article>
  </div>

</div>
